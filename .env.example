# AI Multitask Assistant Configuration
# Copy this file to .env and update with your settings

# Application Settings
APP_NAME=AI Multitask Assistant
APP_VERSION=1.0.0
DEBUG=True
HOST=0.0.0.0
PORT=8001

# Security
SECRET_KEY=change-this-to-a-random-secret-key-in-production
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8001

# Database
DATABASE_PATH=ai-assistant/database/assistant.db

# N8N Integration
N8N_WEBHOOK_URL=http://localhost:5678/webhook
N8N_API_URL=http://localhost:5678/api/v1
N8N_API_KEY=your-n8n-api-key-here

# Language Settings
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,ur

# File Operations
WORKSPACE_DIR=/home/user/ai-assistant-workspace
MAX_FILE_SIZE=10485760
ALLOWED_FILE_EXTENSIONS=.txt,.md,.json,.csv,.pdf,.doc,.docx,.py,.js,.html,.css

# System Commands
ENABLE_SYSTEM_COMMANDS=True
SAFE_COMMANDS=ls,pwd,date,whoami,cat,echo,mkdir,touch,cp,mv,grep,find
BLOCKED_COMMANDS=rm -rf,sudo,shutdown,reboot,mkfs,dd,chmod 777

# Task Management
TASK_REMINDER_INTERVAL=3600
MAX_TASKS_PER_USER=100

# Email Settings (Optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=your-email@gmail.com

# Calendar Integration (Optional)
CALENDAR_PROVIDER=google
CALENDAR_API_KEY=your-calendar-api-key

# AI/NLP Settings
USE_LOCAL_NLP=True
USE_GEMINI_AI=True
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-1.5-flash
OPENAI_API_KEY=your-openai-api-key-optional

# WhatsApp Integration
WHATSAPP_ENABLED=True
WHATSAPP_METHOD=selenium
WHATSAPP_SESSION_DIR=/home/user/.ai-assistant/whatsapp-session
WHATSAPP_HEADLESS=False
WHATSAPP_DEFAULT_COUNTRY_CODE=+92
WHATSAPP_QUEUE_CHECK_INTERVAL=30
WHATSAPP_AUTO_START_QUEUE=False
WHATSAPP_AUTHORIZED_NUMBERS=+923001234567,+923007654321

# Voice Integration
VOICE_ENABLED=True
VOICE_WAKE_WORD_REQUIRED=True
VOICE_WAKE_WORDS=hey assistant,اے اسسٹنٹ
VOICE_CONTINUOUS_MODE=False
VOICE_RESPONSE_ENABLED=True
VOICE_SPEECH_RATE=150
VOICE_VOLUME=0.9
VOICE_ENERGY_THRESHOLD=4000
VOICE_TIMEOUT=5
VOICE_PHRASE_TIME_LIMIT=10
VOICE_AUTO_CALIBRATE=True

# Smart Learning & Personalization
LEARNING_ENABLED=True
LEARNING_MIN_PATTERN_OCCURRENCES=3
LEARNING_CONFIDENCE_THRESHOLD=0.6
LEARNING_HABIT_THRESHOLD=0.7
LEARNING_AUTO_LEARN=True
LEARNING_CONTEXT_WINDOW=10
LEARNING_CONTEXT_TIMEOUT_MINUTES=30
LEARNING_PREDICTION_LIMIT=5
LEARNING_VOICE_RECOGNITION_THRESHOLD=0.75
