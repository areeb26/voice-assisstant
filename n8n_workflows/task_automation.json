            {
              "name": "task_priority",
              "value": "={{ $json.data.priority }}"
            },
            {
              "name": "due_date",
              "value": "={{ $json.data.due_date }}"
            }
          ]
        },
        "options": {}
      },
      "id": "extract-task-data",
      "name": "Extract Task Data",
      "type": "n8n-nodes-base.set",
      "typeVersion": 1,
      "position": [450, 300]
    },
    {
      "parameters": {
        "conditions": {
          "string": [
            {
              "value1": "={{ $json.task_priority }}",
              "operation": "equals",
              "value2": "urgent"
            }
          ]
        }
      },
      "id": "check-if-urgent",
      "name": "Is Urgent?",
      "type": "n8n-nodes-base.if",
      "typeVersion": 1,
      "position": [650, 300]
    },
    {
      "parameters": {
        "fromEmail": "assistant@example.com",
        "toEmail": "user@example.com",
        "subject": "ðŸš¨ Urgent Task Created",
